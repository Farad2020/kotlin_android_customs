<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rounded_secondary"
    android:padding="16dp">


        <ImageView
            android:id="@+id/ic_plane"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_plane"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/search_text_first"
            style="@style/ButtonText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/searchbar_minsk"
            app:layout_constraintStart_toEndOf="@+id/ic_plane"
            app:layout_constraintTop_toTopOf="@+id/ic_plane"
            app:layout_constraintBottom_toBottomOf="@+id/ic_plane"/>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/ic_plane"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_search_white"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/search_text_second"
            style="@style/ButtonText1_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/searchbar_where_to"
            app:layout_constraintStart_toEndOf="@+id/ic_search"
            app:layout_constraintTop_toTopOf="@id/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/ic_search"/>


        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_text_second"
            app:layout_constraintBottom_toBottomOf="@id/search_text_second"/>

</androidx.constraintlayout.widget.ConstraintLayout>